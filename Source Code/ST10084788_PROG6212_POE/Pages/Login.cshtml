@page
@model ST10084788_PROG6212_POE.Pages.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-mg-12 col-lg-4">
            <h1 class="mb-3">Login</h1>
            
            <form method="post">
                <div class="mb-3">
                    <label class="col-form-label" asp-for="LModel.Username">Username</label>
                    <input type="text" asp-for="LModel.Username" class="form-control" />
                    <span asp-validation-for="LModel.Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="LModel.Password">Password</label>
                    <input type="password" asp-for="LModel.Password" class="form-control" />
                    <span asp-validation-for="LModel.Password" class="text-danger"></span>
                </div>

                <div class="mb-3" form-check>
                    <input type="checkbox" asp-for="LModel.RememberMe" class="form-control-input" />
                    <label class="form-check-label" asp-for="LModel.RememberMe">Remember Me?</label>
                </div>

                <div class="md-3">
                    <button type="submit" style="color:darkblue; background-color:mediumpurple;" class="btn btn-primary">Login</button>
                </div>
            
            </form>
        </div>
    </div>

</div>
