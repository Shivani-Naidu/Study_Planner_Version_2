@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager


<!DOCTYPE html>
<html lang="en">
<head >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST10084788_PROG6212_POE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body  style="color:darkblue; font-family:'Times New Roman', Times, serif" >
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" >
            <div class="container" >
                <a class="navbar-brand" asp-area="" style ="color:mediumpurple; font-weight:bold" asp-page="/Index">Time Management Planner</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
                    @if(SignInManager.IsSignedIn(User))
                       {
                            <ul class="navbar-nav flex-grow-1" >
                                <li class="nav-item" >
                                    <a class="nav-link "  asp-area="" style ="color:slateblue;" asp-page="/Index">Home</a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link" asp-area=""  style ="color:slateblue;"  asp-page="/Semesters/Index">Semesters</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"  asp-area="" style ="color:slateblue;"  asp-page="/Modules/Index">Modules</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"  asp-area="" style ="color:slateblue;"  asp-page="/StudySessions/Index">Self-Study Sessions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"  asp-area="" style ="color:slateblue;"  asp-page="/Notifications/Index">Reminders</a>
                                </li>
                                
                            </ul>
                            <ul class="navbar-nav d-flex justify-content-end ">
                                <li class="nav-item" >
                                    <a class="btn btn-primary" asp-area="" style ="color:darkblue; background-color:mediumpurple;" asp-page="/Logout">Logout</a>
                                </li>
                           </ul>
                       }
                       else
                       {
                           <ul class="navbar-nav d-flex justify-content-end flex-grow-1">
                           <li class="nav-item">
                                <a asp-page="/Login" style ="color:darkblue; background-color:mediumpurple;"  class="btn btn-primary">Login</a>
                           </li class="nav-item">
                                <li>
                                    <a asp-page="/Register" style ="color:darkblue; background-color:mediumpurple;" class="btn">Register</a>
                                </li>
                           </ul>
                       }
                  
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color: darkblue">
        
            &copy; 2022 - Shivani Naidu - ST10084788 PROG6212 POE 
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
