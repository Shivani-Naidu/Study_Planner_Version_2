@page
@model ST10084788_PROG6212_POE.Pages.Modules.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Module Information</h1>

<p>
    <a asp-page="Create" style="color:darkblue">Add A Module</a>
</p>

@* display the records *@
<table class="table" style="color:darkblue; background-color:lightblue;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].SemesterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ModuleCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ClassHoursPerWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].NeededHoursToStudy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Module) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCredits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassHoursPerWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NeededHoursToStudy)
            </td>
            <td>
                 @* <a asp-page="./Edit" asp-route-id="@item.ModuleID">Edit</a> *@
                 
                 @* link to allow user to view module stats*@
                <a asp-page="./Details" style="color:darkblue" asp-route-id="@item.ModuleID">View Module Information And Study Stats For The Current Week</a>
                @*<a asp-page="./Delete" style="color:darkblue" asp-route-id="@item.ModuleID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
