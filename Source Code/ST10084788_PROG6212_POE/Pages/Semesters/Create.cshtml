@page
@model ST10084788_PROG6212_POE.Pages.Semesters.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>New Semester Data</h1>

<h4>Please Fill In The Fields Below</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* get user's input for semester info*@
            <div class="form-group">
                <label asp-for="Semester.SemesterName" class="control-label"></label>
                <input asp-for="Semester.SemesterName" class="form-control" />
                <span asp-validation-for="Semester.SemesterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester.SemesterWeeks" class="control-label"></label>
                <input asp-for="Semester.SemesterWeeks" class="form-control" />
                <span asp-validation-for="Semester.SemesterWeeks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester.SemesterDate" class="control-label"></label>
                <input asp-for="Semester.SemesterDate" class="form-control" />
                <span asp-validation-for="Semester.SemesterDate" class="text-danger"></span>
            </div>

            @*button to get all details and then determine if all fields have been entered*@
            <div class="form-group">
                <input type="submit" value="Create" style="background-color:slateblue; color: darkblue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @*link provided at the bottom of the create page which allows users to navigate back to the semester page*@
    <a asp-page="Index" style="color:darkblue">Back To Semesters</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
